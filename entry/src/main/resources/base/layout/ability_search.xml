<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#e8e8e8"
    ohos:orientation="vertical">

    <!--显示要查找老师的信息标题-->
    <DirectionalLayout
        ohos:height="51vp"
        ohos:width="match_parent"
        ohos:background_element="#11cd6e"
        ohos:orientation="horizontal">
        <!--返回箭头-->
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:id="$+id:search_back_arrow"
            ohos:weight="0.5"
            ohos:top_margin="10vp"
            ohos:scale_mode="inside"
            ohos:left_margin="10vp"
            ohos:image_src="$media:back"/>
        <!--科目文字-->
        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:orientation="vertical">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:text_size="22vp"
                ohos:text_color="#ffffff"
                ohos:top_margin="12vp"
                ohos:text="查找教师"/>
        </DirectionalLayout>
    </DirectionalLayout>
    <!--间隔线-->
    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"
        />
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:orientation="horizontal">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1.5"
            ohos:orientation="vertical">
            <Button
                ohos:height="40vp"
                ohos:width="match_content"
                ohos:id="$+id:subject_name"
                ohos:text="科目"
                ohos:layout_alignment="center"
                ohos:text_size="20fp"
                ohos:text_color="#8b8b7a"
                />
        </DirectionalLayout>
        <!--间隔线-->
        <Image
            ohos:height="30vp"
            ohos:width="1vp"
            ohos:top_margin="5vp"
            ohos:background_element="#cfcfcf"/>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1.5"
            ohos:orientation="vertical">
            <Button
                ohos:height="40vp"
                ohos:width="match_content"
                ohos:id="$+id:grade"
                ohos:layout_alignment="horizontal_center"
                ohos:text="年级"
                ohos:text_size="20fp"
                ohos:text_color="#8b8b7a"
                />
        </DirectionalLayout>
    </DirectionalLayout>
    <!--间隔线-->
    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>
    <ListContainer
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:id="$+id:select_teacher"
        ohos:background_element="#ffffff">
    </ListContainer>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$+id:remind"
        ohos:text_size="35fp"
        ohos:top_margin="50vp"
        ohos:layout_alignment="horizontal_center"/>
</DirectionalLayout>