<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:id="$+id:user_message"
        ohos:height="110vp"
        ohos:width="match_parent"
        ohos:background_element="#11cd6e"
        ohos:orientation="horizontal">
        <Image
            ohos:id="$+id:icon"
            ohos:height="70vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="center"
            ohos:left_margin="10vp"
            ohos:scale_mode="inside"
            ohos:image_src="$media:touxiang"
            />
        <Text
            ohos:id="$+id:phone_numbers"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="4"
            ohos:layout_alignment="center"
            ohos:text="手机号："
            ohos:text_color="#ffffff"
            ohos:left_margin="10vp"
            ohos:text_size="25fp"/>
        <Image
            ohos:id="$+id:my_back_arrow"
            ohos:height="60vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:scale_mode="inside"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:right_arrow"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="100vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:orientation="horizontal">
        <!--我的订单-->
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:orientation="vertical">
            <Image
                ohos:id="$+id:myorder"
                ohos:height="55vp"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:top_margin="10vp"
                ohos:scale_mode="inside"
                ohos:image_src="$media:myorder"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:text="我的订单"
                ohos:top_margin="5vp"
                ohos:text_size="19fp"/>
        </DirectionalLayout>
        <!--间隔线-->
        <Image
            ohos:height="80vp"
            ohos:width="1vp"
            ohos:top_margin="10vp"
            ohos:left_margin="10vp"
            ohos:background_element="#cfcfcf"/>

        <!--我的钱包-->
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:orientation="vertical">
            <Image
                ohos:id="$+id:mywallet"
                ohos:height="55vp"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:top_margin="10vp"
                ohos:scale_mode="inside"
                ohos:image_src="$media:mywallet"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:text="我的钱包"
                ohos:top_margin="5vp"
                ohos:text_size="19fp"/>
        </DirectionalLayout>

        <!--间隔线-->
        <Image
            ohos:height="80vp"
            ohos:width="1vp"
            ohos:top_margin="10vp"
            ohos:left_margin="10vp"
            ohos:background_element="#cfcfcf"/>

        <!--奖学券-->
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:orientation="vertical">
            <Image
                ohos:id="$+id:award"
                ohos:height="55vp"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:top_margin="10vp"
                ohos:scale_mode="inside"
                ohos:image_src="$media:award"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:text="奖学券"
                ohos:top_margin="5vp"
                ohos:text_size="19fp"/>
        </DirectionalLayout>
    </DirectionalLayout>
    <!--间隔线-->
    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#000000"/>
    <DirectionalLayout
        ohos:id="$+id:my_teacher"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#ffffff"
        ohos:top_margin="15vp">
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:scale_mode="inside"
            ohos:image_src="$media:myteacher"
            ohos:left_margin="5vp"
            ohos:layout_alignment="vertical_center"/>
        <Text

            ohos:height="40vp"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:text="我的老师"
            ohos:left_margin="10vp"
            ohos:layout_alignment="vertical_center"
            ohos:text_size="22fp"/>
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:right_arrow"
            ohos:scale_mode="inside"/>
    </DirectionalLayout>
    <!--间隔线-->
    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>
    <DirectionalLayout
        ohos:id="$+id:my_valuation"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#ffffff"
        ohos:top_margin="15vp">
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:scale_mode="inside"
            ohos:image_src="$media:myvaluation"
            ohos:left_margin="5vp"
            ohos:layout_alignment="vertical_center"/>
        <Text

            ohos:height="40vp"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:text="我的评价"
            ohos:left_margin="10vp"
            ohos:layout_alignment="vertical_center"
            ohos:text_size="22fp"/>
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:right_arrow"
            ohos:scale_mode="inside"/>
    </DirectionalLayout>

    <!--间隔线-->
    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>
    <DirectionalLayout
        ohos:id="$+id:my_answer"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#ffffff"
        ohos:top_margin="15vp">
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:scale_mode="inside"
            ohos:image_src="$media:myanswer"
            ohos:left_margin="5vp"
            ohos:layout_alignment="vertical_center"/>
        <Text

            ohos:height="40vp"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:text="我的回答"
            ohos:left_margin="10vp"
            ohos:layout_alignment="vertical_center"
            ohos:text_size="22fp"/>
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:right_arrow"
            ohos:scale_mode="inside"/>
    </DirectionalLayout>

    <!--间隔线-->
    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>
    <DirectionalLayout
        ohos:id="$+id:my_course"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#ffffff"
        ohos:top_margin="15vp">
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:scale_mode="inside"
            ohos:image_src="$media:mycourses"
            ohos:left_margin="5vp"
            ohos:layout_alignment="vertical_center"/>
        <Text

            ohos:height="40vp"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:text="我的课程"
            ohos:left_margin="10vp"
            ohos:layout_alignment="vertical_center"
            ohos:text_size="22fp"/>
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:right_arrow"
            ohos:scale_mode="inside"/>
    </DirectionalLayout>

    <!--间隔线-->
    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>
    <DirectionalLayout
        ohos:id="$+id:my_plan"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#ffffff"
        ohos:top_margin="15vp">
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:scale_mode="inside"
            ohos:image_src="$media:studyschedule"
            ohos:left_margin="5vp"
            ohos:layout_alignment="vertical_center"/>
        <Text

            ohos:height="40vp"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:text="学习计划与总结"
            ohos:left_margin="10vp"
            ohos:layout_alignment="vertical_center"
            ohos:text_size="22fp"/>
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:right_arrow"
            ohos:scale_mode="inside"/>
    </DirectionalLayout>

    <!--间隔线-->
    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>
    <DirectionalLayout
        ohos:id="$+id:settings"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#ffffff"
        ohos:top_margin="15vp">
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:scale_mode="inside"
            ohos:image_src="$media:settings"
            ohos:left_margin="5vp"
            ohos:layout_alignment="vertical_center"/>
        <Text

            ohos:height="40vp"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:text="设置"
            ohos:left_margin="10vp"
            ohos:layout_alignment="vertical_center"
            ohos:text_size="22fp"/>
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:right_arrow"
            ohos:scale_mode="inside"/>
    </DirectionalLayout>
    <!--间隔线-->
    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>

</DirectionalLayout>