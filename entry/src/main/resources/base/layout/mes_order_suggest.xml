<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#8b8b7a"
    ohos:orientation="vertical">
    <!--消息标题-->
    <DirectionalLayout
        ohos:height="51vp"
        ohos:width="match_parent"
        ohos:background_element="#11cd6e"
        ohos:orientation="horizontal">
        <!--返回箭头-->
        <Image
            ohos:id="$+id:order_suggest_back_arrow"
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="0.5"
            ohos:top_margin="10vp"
            ohos:scale_mode="inside"
            ohos:left_margin="10vp"
            ohos:image_src="$media:back"/>
        <!--消息-->
        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:orientation="vertical">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:text_size="22fp"
                ohos:text_color="#ffffff"
                ohos:top_margin="12vp"
                ohos:text="我的建议"/>
        </DirectionalLayout>
    </DirectionalLayout>
    <!--建议科目-->
    <DirectionalLayout
        ohos:height="55vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:orientation="horizontal">
        <Text
            ohos:height="40vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="科目："
            ohos:text_size="20fp"

            ohos:top_margin="5vp"
            ohos:left_margin="20vp"/>
        <Text
            ohos:height="40vp"
            ohos:width="0vp"
            ohos:weight="4"
            ohos:id="$+id:suggest_subject"
            ohos:hint="点击选择科目"
            ohos:text_size="20fp"
            ohos:bottom_margin="10vp"
            ohos:right_margin="10vp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="55vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:top_margin="10vp"
        ohos:orientation="horizontal">
        <Text
            ohos:height="40vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="教师："
            ohos:text_size="20fp"
            ohos:top_margin="5vp"
            ohos:bottom_margin="10vp"
            ohos:left_margin="20vp"/>
        <Text
            ohos:height="40vp"
            ohos:width="0vp"
            ohos:weight="4"
            ohos:id="$+id:suggest_topic"
            ohos:hint="点击选择老师"
            ohos:text_size="20fp"
            ohos:top_margin="10vp"
            ohos:right_margin="10vp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="160vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:top_margin="10vp"
        ohos:orientation="horizontal">
        <Text
            ohos:height="140vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="评价："
            ohos:text_size="20fp"
            ohos:top_margin="5vp"
            ohos:left_margin="20vp"/>
        <TextField
            ohos:height="140vp"
            ohos:width="0vp"
            ohos:weight="4"
            ohos:id="$+id:suggestion"
            ohos:multiple_lines="true"
            ohos:bottom_margin="10vp"
            ohos:text_size="20fp"
            ohos:top_margin="10vp"
            ohos:background_element="#ffeeee"
            ohos:right_margin="10vp"/>
    </DirectionalLayout>

    <Button
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:id="$+id:suggest_report"
        ohos:text_color="#ffffff"
        ohos:text="发表建议"
        ohos:text_size="20fp"
        ohos:background_element="#11cd6e"
        ohos:layout_alignment="center"/>

</DirectionalLayout>