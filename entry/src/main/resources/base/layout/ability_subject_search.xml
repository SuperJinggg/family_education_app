<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="420vp"
    ohos:background_element="#ffffff"
    ohos:width="match_parent"
    ohos:top_margin="1vp"
    ohos:orientation="vertical">
    <!--间隔线-->
    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:top_margin="15vp">
        <!--语文-->

        <Button
            ohos:height="0vp"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:id="$+id:sub1"
            ohos:text="语文"
            ohos:text_size="20fp"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="black"/>

        <Button
            ohos:height="0vp"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:top_margin="15vp"
            ohos:id="$+id:sub2"
            ohos:text="数学"
            ohos:text_size="20fp"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="black"/>

        <Button
            ohos:height="0vp"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:id="$+id:sub3"
            ohos:text="英语"
            ohos:top_margin="15vp"
            ohos:text_size="20fp"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="black"/>
        <Button
            ohos:height="0vp"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:id="$+id:sub4"
            ohos:text="物理"
            ohos:top_margin="15vp"
            ohos:text_size="20fp"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="black"/>
        <Button
            ohos:height="0vp"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:id="$+id:sub5"
            ohos:text="政治"
            ohos:top_margin="15vp"
            ohos:text_size="20fp"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="black"/>
        <Button
            ohos:height="0vp"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:id="$+id:sub6"
            ohos:text="历史"
            ohos:top_margin="15vp"
            ohos:text_size="20fp"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="black"/>
        <Button
            ohos:height="0vp"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:id="$+id:sub7"
            ohos:text="生物"
            ohos:top_margin="15vp"
            ohos:text_size="20fp"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="black"/>

        <Button
            ohos:height="0vp"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:id="$+id:sub8"
            ohos:text="地理"
            ohos:top_margin="15vp"
            ohos:text_size="20fp"
            ohos:layout_alignment="horizontal_center"
            ohos:text_color="black"/>

    </DirectionalLayout>
    <!--确定-->
    <Button
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:id="$+id:sure_sub_select"
        ohos:text_color="#ffffff"
        ohos:top_margin="30vp"
        ohos:text="确定"
        ohos:text_size="20fp"
        ohos:background_element="#11cd6e"
        ohos:layout_alignment="horizontal_center"/>

</DirectionalLayout>