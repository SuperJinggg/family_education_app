<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="160vp"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="35vp"
        ohos:width="match_parent"
        ohos:background_element="#3e85ff"
        ohos:orientation="horizontal">

        <Text
            ohos:height="33vp"
            ohos:width="0vp"
            ohos:weight="1.5"
            ohos:text="书名"
            ohos:text_color="#ffffff"
            ohos:text_size="15fp"
            ohos:left_margin="10vp"
            ohos:layout_alignment="vertical_center"/>

        <Text
            ohos:height="33vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="数量"
            ohos:text_color="#ffffff"
            ohos:layout_alignment="vertical_center"
            ohos:text_size="15fp"/>
        <Text
            ohos:height="33vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="总价"
            ohos:text_color="#ffffff"
            ohos:layout_alignment="vertical_center"
            ohos:text_size="15fp"/>

        <Text
            ohos:height="33vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="状态"
            ohos:text_color="#ffffff"
            ohos:text_size="15fp"
            ohos:left_margin="10vp"
            ohos:layout_alignment="vertical_center"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="125vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#e8e8e8">


        <Text
            ohos:id="$+id:bookName"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:text_color="black"
            ohos:left_padding="15vp"
            ohos:weight="1.5"
            ohos:multiple_lines="true"
            ohos:text_size="16fp"/>


        <Text
            ohos:id="$+id:bookNum"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text_alignment="vertical_center"
            ohos:text_color="black"
            ohos:text_size="18fp"/>
        <Text
            ohos:id="$+id:bookPrice"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text_alignment="vertical_center"
            ohos:text_color="black"
            ohos:text_size="18fp"/>

        <Text
            ohos:id="$+id:bookState"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text_alignment="vertical_center"
            ohos:text_color="black"
            ohos:text_size="18fp"/>


    </DirectionalLayout>


</DirectionalLayout>