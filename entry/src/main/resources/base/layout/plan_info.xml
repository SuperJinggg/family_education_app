<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#e8e8e8"
    ohos:orientation="vertical">

        <DirectionalLayout
            ohos:height="51vp"
            ohos:width="match_parent"
            ohos:background_element="#11cd6e"
            ohos:orientation="horizontal">
            <!--返回箭头-->
            <Image
                ohos:height="30vp"
                ohos:width="0vp"
                ohos:id="$+id:back"
                ohos:weight="0.5"
                ohos:top_margin="10vp"
                ohos:scale_mode="inside"
                ohos:left_margin="10vp"
                ohos:image_src="$media:back"/>
            <DirectionalLayout
                ohos:height="50vp"
                ohos:width="0vp"
                ohos:weight="5"
                ohos:orientation="vertical">
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:layout_alignment="center"
                    ohos:text_size="22vp"
                    ohos:text_color="#ffffff"
                    ohos:top_margin="12vp"
                    ohos:text="计划"/>
            </DirectionalLayout>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="101vp"
            ohos:width="match_parent"
            ohos:top_margin="17vp"
            ohos:orientation="vertical"
            ohos:background_element="#ffffff">
            <DirectionalLayout
                ohos:height="50vp"
                ohos:width="match_parent"
                ohos:orientation="horizontal">
                <Text
                    ohos:height="match_parent"
                    ohos:width="0vp"
                    ohos:weight="1"
                    ohos:text="开始时间"
                    ohos:text_size="15fp"
                    ohos:top_padding="15vp"
                    ohos:left_padding="10vp"
                    ohos:text_alignment="left"/>
                <Text
                    ohos:id="$+id:plan_start_time"
                    ohos:height="match_parent"
                    ohos:width="0vp"
                    ohos:weight="1"

                    ohos:text_size="15fp"
                    ohos:top_padding="15vp"
                    ohos:right_padding="20vp"
                    ohos:text_alignment="right"/>
            </DirectionalLayout>
            <Image
                ohos:height="1vp"
                ohos:width="match_parent"
                ohos:background_element="#cfcfcf"/>
            <DirectionalLayout
                ohos:height="50vp"
                ohos:width="match_parent"
                ohos:orientation="horizontal">
                <Text
                    ohos:height="match_parent"
                    ohos:width="0vp"
                    ohos:weight="1"
                    ohos:text="结束时间"
                    ohos:top_padding="15vp"
                    ohos:text_size="15fp"
                    ohos:left_padding="10vp"
                    ohos:text_alignment="left"/>
                <Text
                    ohos:id="$+id:plan_end_time"
                    ohos:height="match_parent"
                    ohos:width="0vp"
                    ohos:weight="1"

                    ohos:top_padding="15vp"
                    ohos:text_size="15fp"
                    ohos:right_padding="20vp"
                    ohos:text_alignment="right"/>
            </DirectionalLayout>
            <Image
                ohos:height="1vp"
                ohos:width="match_parent"
                ohos:background_element="#cfcfcf"/>
        </DirectionalLayout>

    <Text
        ohos:id="$+id:plan_info"
        ohos:height="125vp"
        ohos:width="300vp"
        ohos:text_color="black"
        ohos:text_size="18fp"
        ohos:top_margin="18vp"
        ohos:layout_alignment="horizontal_center"
        ohos:multiple_lines="true"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#ffffff"/>

    <Button
        ohos:id="$+id:delete_plan"
        ohos:height="60vp"
        ohos:width="240vp"
        ohos:top_margin="120vp"
        ohos:text_alignment="center"
        ohos:text_size="18fp"
        ohos:text_color="#ffffff"
        ohos:layout_alignment="horizontal_center"
        ohos:text="删除计划"
        ohos:background_element="#ff3e3e"

        />

</DirectionalLayout>