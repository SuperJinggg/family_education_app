<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#e8e8e8"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="100vp"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <DirectionalLayout
            ohos:height="51vp"
            ohos:width="match_parent"
            ohos:background_element="#11cd6e"
            ohos:orientation="horizontal">
            <!--返回箭头-->
            <Image
                ohos:height="30vp"
                ohos:width="0vp"
                ohos:id="$+id:back"
                ohos:weight="0.5"
                ohos:top_margin="10vp"
                ohos:scale_mode="inside"
                ohos:left_margin="10vp"
                ohos:image_src="$media:back"/>
            <DirectionalLayout
                ohos:height="50vp"
                ohos:width="0vp"
                ohos:weight="5"
                ohos:orientation="vertical">
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:layout_alignment="center"
                    ohos:text_size="22vp"
                    ohos:text_color="#ffffff"
                    ohos:top_margin="12vp"
                    ohos:text="个人信息"/>
            </DirectionalLayout>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:background_element="#ffffff">
            <Text
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:text="头像"
                ohos:text_alignment="left"
                ohos:left_padding="10vp"
                ohos:text_size="15fp"
                ohos:top_padding="15vp"
                ohos:weight="6"/>
            <Image
                ohos:height="45vp"
                ohos:width="0vp"
                ohos:image_src="$media:touxiang"
                ohos:scale_mode="inside"
                ohos:layout_alignment="vertical_center"
                ohos:weight="1"
                ohos:right_margin="10vp"/>
        </DirectionalLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="101vp"
        ohos:width="match_parent"
        ohos:top_margin="30vp"
        ohos:orientation="vertical"
        ohos:background_element="#ffffff">
        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"
                ohos:text="性别"
                ohos:text_size="15fp"
                ohos:left_padding="10vp"
                ohos:top_padding="15vp"
                ohos:text_alignment="left"/>
            <Text
                ohos:id="$+id:teacher_sex"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"

                ohos:text_size="15fp"
                ohos:right_padding="20vp"
                ohos:top_padding="15vp"
                ohos:text_alignment="right"/>
        </DirectionalLayout>
        <Image
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#cfcfcf"/>
        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"
                ohos:text="姓名"
                ohos:text_size="15fp"
                ohos:left_padding="10vp"
                ohos:top_padding="15vp"
                ohos:text_alignment="left"/>
            <Text
                ohos:id="$+id:teacher_name"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"
                ohos:text_size="15fp"
                ohos:right_padding="20vp"
                ohos:top_padding="15vp"
                ohos:text_alignment="right"/>
        </DirectionalLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="152vp"
        ohos:width="match_parent"
        ohos:top_margin="17vp"
        ohos:orientation="vertical"
        ohos:background_element="#ffffff">
        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"
                ohos:text="手机号"
                ohos:text_size="15fp"
                ohos:top_padding="15vp"
                ohos:left_padding="10vp"
                ohos:text_alignment="left"/>
            <Text
                ohos:id="$+id:teacher_telephone"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"

                ohos:text_size="15fp"
                ohos:top_padding="15vp"
                ohos:right_padding="20vp"
                ohos:text_alignment="right"/>
        </DirectionalLayout>
        <Image
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#cfcfcf"/>
        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"
                ohos:text="地址"
                ohos:top_padding="15vp"
                ohos:text_size="15fp"
                ohos:left_padding="10vp"
                ohos:text_alignment="left"/>
            <Text
                ohos:id="$+id:teacher_address"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"

                ohos:top_padding="15vp"
                ohos:text_size="15fp"
                ohos:right_padding="20vp"
                ohos:text_alignment="right"/>
        </DirectionalLayout>
        <Image
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#cfcfcf"/>
        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"
                ohos:text="科目"
                ohos:top_padding="15vp"
                ohos:text_size="15fp"
                ohos:left_padding="10vp"
                ohos:text_alignment="left"/>
            <Text
                ohos:id="$+id:teacher_subject"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"
                ohos:top_padding="15vp"
                ohos:text_size="15fp"
                ohos:right_padding="20vp"
                ohos:text_alignment="right"/>
        </DirectionalLayout>
    </DirectionalLayout>

    <Text
        ohos:id="$+id:teacher_experience"
        ohos:height="125vp"
        ohos:width="300vp"
        ohos:text_color="#cfcfcf"
        ohos:text_size="18fp"
        ohos:top_margin="18vp"
        ohos:layout_alignment="horizontal_center"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#ffffff"/>

    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="280vp"
        ohos:layout_alignment="horizontal_center"
        ohos:orientation="horizontal"
        ohos:top_margin="35vp">
        <Button
            ohos:id="$+id:check_teacher_time"
            ohos:height="50vp"
            ohos:width="100vp"
            ohos:layout_alignment="left"
            ohos:text_alignment="center"
            ohos:text_size="18fp"
            ohos:text_color="#ffffff"
            ohos:text="时间安排表"
            ohos:background_element="#107c41"
            ohos:left_margin="20vp"
            ohos:top_margin="5vp"/>

        <Button
            ohos:id="$+id:book_teacher"
            ohos:height="50vp"
            ohos:width="100vp"

            ohos:text_alignment="center"
            ohos:text_size="18fp"
            ohos:text_color="#ffffff"
            ohos:text="预约老师"
            ohos:background_element="#107c41"
            ohos:left_margin="50vp"
            ohos:top_margin="5vp"
            />

    </DirectionalLayout>


</DirectionalLayout>