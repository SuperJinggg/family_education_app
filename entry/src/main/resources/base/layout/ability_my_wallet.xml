<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="51vp"
        ohos:width="match_parent"
        ohos:background_element="#11cd6e"
        ohos:orientation="horizontal">
        <!--返回箭头-->
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:id="$+id:back"
            ohos:weight="0.5"
            ohos:top_margin="10vp"
            ohos:scale_mode="inside"
            ohos:left_margin="10vp"
            ohos:image_src="$media:back"/>
        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:orientation="vertical">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:text_size="22vp"
                ohos:text_color="#ffffff"
                ohos:top_margin="12vp"
                ohos:text="我的钱包"/>
        </DirectionalLayout>
    </DirectionalLayout>

    <!--我的总额-->
    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:id="$+id:money"
        ohos:orientation="horizontal"
        >
        <Image
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="0.5"
            ohos:top_margin="5vp"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:mymoney"
            ohos:left_margin="10vp"
            ohos:scale_mode="inside"/>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:bottom_padding="15vp"
                ohos:top_margin="12vp"
                ohos:left_margin="20vp"
                ohos:text="我的余额 ："
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:my_money"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="20fp"
                ohos:layout_alignment="vertical_center"/>
        </DirectionalLayout>
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:right_arrow"/>
    </DirectionalLayout>
    <!--间隔线-->

    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>
    <!--我的积分-->
    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:id="$+id:points"
        ohos:orientation="horizontal"
        >
        <Image
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="0.5"
            ohos:top_margin="5vp"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:points"
            ohos:left_margin="10vp"
            ohos:scale_mode="inside"/>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:bottom_padding="15vp"
                ohos:top_margin="12vp"
                ohos:left_margin="20vp"
                ohos:text="我的积分 ："
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:my_points"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="20fp"
                ohos:layout_alignment="vertical_center"/>
        </DirectionalLayout>
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:right_arrow"/>
    </DirectionalLayout>

</DirectionalLayout>