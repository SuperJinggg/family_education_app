<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#EEEEEE"
    ohos:orientation="vertical">
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:text_alignment="center"
        ohos:top_margin="100fp"
        ohos:text="找回密码"
        ohos:text_color="#35A9D0"
        ohos:text_size="40fp"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="horizontal_center"
        ohos:top_margin="20fp"
        ohos:orientation="horizontal">
        <Image
            ohos:height="40fp"
            ohos:width="40fp"
            ohos:left_margin="60fp"
            ohos:scale_mode="inside"
            ohos:image_src="$media:account"/>
        <TextField
            ohos:id="$+id:update_phone"
            ohos:height="40fp"
            ohos:width="200fp"
            ohos:background_element="#FFFFFF"
            ohos:hint="请输入手机号"
            ohos:text_alignment="vertical_center"
            ohos:text_size="18fp"
            ohos:text_input_type="pattern_number"
            ohos:max_width="11"
            ohos:max_text_lines="1"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="horizontal_center"
        ohos:top_margin="15fp"
        ohos:orientation="horizontal">
        <Image
            ohos:height="40fp"
            ohos:width="40fp"
            ohos:left_margin="60fp"
            ohos:scale_mode="inside"
            ohos:image_src="$media:password"/>
        <TextField
            ohos:id="$+id:update_password"
            ohos:height="40fp"
            ohos:width="200fp"
            ohos:background_element="#FFFFFF"
            ohos:hint="请输入新密码"
            ohos:text_alignment="vertical_center"
            ohos:text_size="18fp"
            ohos:text_input_type="pattern_password"
            ohos:max_width="16"
            ohos:max_text_lines="1"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="horizontal_center"
        ohos:top_margin="15fp"
        ohos:orientation="horizontal">
        <Image
            ohos:height="40fp"
            ohos:width="40fp"
            ohos:left_margin="60fp"
            ohos:scale_mode="inside"
            ohos:image_src="$media:password"/>
        <TextField
            ohos:id="$+id:password_again"
            ohos:height="40fp"
            ohos:width="200fp"
            ohos:background_element="#FFFFFF"
            ohos:hint="请再次输入新密码"
            ohos:text_alignment="vertical_center"
            ohos:text_size="18fp"
            ohos:text_input_type="pattern_password"
            ohos:max_width="16"
            ohos:max_text_lines="1"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="15fp"
        ohos:orientation="horizontal"
        ohos:layout_alignment="horizontal_center">
        <TextField
            ohos:height="40fp"
            ohos:width="120vp"
            ohos:hint="请输入验证码"
            ohos:max_text_lines="1"
            ohos:text_alignment="vertical_center"
            ohos:text_size="18fp"
            ohos:id="$+id:update_code"
            ohos:background_element="#ffffff"/>
        <Button
            ohos:id="$+id:generate_code"
            ohos:height="40fp"
            ohos:width="120vp"
            ohos:left_margin="0vp"
            ohos:text="获取验证码"
            ohos:background_element="#35a9d0"
            ohos:text_color="#ffffff"
            ohos:text_alignment="center"
            ohos:text_size="18fp"/>
    </DirectionalLayout>
    <Button
        ohos:id="$+id:update"
        ohos:height="45fp"
        ohos:width="240fp"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="30fp"
        ohos:background_element="#35A9D0"
        ohos:text="更改密码"
        ohos:text_color="#FFFFFF"
        ohos:text_size="22fp"/>
</DirectionalLayout>