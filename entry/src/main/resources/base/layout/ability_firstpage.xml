<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <!--主要内容-->
    <DirectionalLayout
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:weight="3"
        ohos:orientation="vertical">

        <DirectionalLayout
            ohos:height="52vp"
            ohos:width="match_parent"
            ohos:background_element="#11cd6e"
            ohos:orientation="horizontal">
            <!--显示地点-->
            <Text
                ohos:height="30vp"
                ohos:width="0vp"
                ohos:id="$+id:position"
                ohos:weight="1"
                ohos:top_margin="14vp"
                ohos:left_margin="10vp"
                ohos:text_color="#ffffff"
                ohos:text_size="18fp"
                />

            <!--显示搜索框-->
            <SearchBar
                ohos:id="$+id:word"
                ohos:height="40vp"
                ohos:width="0vp"
                ohos:weight="4"
                ohos:top_margin="6vp"
                ohos:right_margin="10vp"
                ohos:background_element="#ffeeee">
            </SearchBar>
        </DirectionalLayout>

        <!--课程-->
        <DirectionalLayout
            ohos:height="170vp"
            ohos:width="match_parent"
            ohos:background_element="#ffffff"
            ohos:orientation="vertical">
            <DirectionalLayout
                ohos:height="70vp"
                ohos:width="match_parent"
                ohos:top_margin="15vp"
                ohos:orientation="horizontal">
                <!--显示课程图标和名称-->
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:weight="1"
                    ohos:layout_alignment="horizontal_center"
                    ohos:id="$+id:math"
                    ohos:orientation="vertical">
                    <Image

                        ohos:height="50vp"
                        ohos:width="50vp"
                        ohos:scale_mode="inside"
                        ohos:layout_alignment="horizontal_center"
                        ohos:image_src="$media:math"/>
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text_size="18fp"
                        ohos:text_color="#8b8b7a"
                        ohos:text="数学"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:weight="1"
                    ohos:layout_alignment="horizontal_center"
                    ohos:id="$+id:chinese"
                    ohos:orientation="vertical">
                    <Image

                        ohos:height="50vp"
                        ohos:width="50vp"
                        ohos:scale_mode="inside"
                        ohos:layout_alignment="horizontal_center"
                        ohos:image_src="$media:chinese"/>
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text_size="18fp"
                        ohos:text_color="#8b8b7a"
                        ohos:text="语文"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:weight="1"
                    ohos:layout_alignment="horizontal_center"
                    ohos:id="$+id:english"
                    ohos:orientation="vertical">
                    <Image

                        ohos:height="50vp"
                        ohos:width="50vp"
                        ohos:scale_mode="inside"
                        ohos:layout_alignment="horizontal_center"
                        ohos:image_src="$media:english"/>
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text_size="18fp"
                        ohos:text_color="#8b8b7a"
                        ohos:text="英语"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:weight="1"
                    ohos:layout_alignment="horizontal_center"
                    ohos:id="$+id:physical"
                    ohos:orientation="vertical">
                    <Image

                        ohos:height="50vp"
                        ohos:width="50vp"
                        ohos:scale_mode="inside"
                        ohos:layout_alignment="horizontal_center"
                        ohos:image_src="$media:physical"/>
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text_size="18fp"
                        ohos:text_color="#8b8b7a"
                        ohos:text="物理"/>
                </DirectionalLayout>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="70vp"
                ohos:width="match_parent"
                ohos:top_margin="15vp"
                ohos:orientation="horizontal">
                <!--显示课程图标和名称-->
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:weight="1"
                    ohos:layout_alignment="horizontal_center"
                    ohos:id="$+id:political"
                    ohos:orientation="vertical">
                    <Image

                        ohos:height="50vp"
                        ohos:width="50vp"
                        ohos:scale_mode="inside"
                        ohos:layout_alignment="horizontal_center"
                        ohos:image_src="$media:political"/>
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text_size="18fp"
                        ohos:text_color="#8b8b7a"
                        ohos:text="政治"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:weight="1"
                    ohos:layout_alignment="horizontal_center"
                    ohos:id="$+id:chemical"
                    ohos:orientation="vertical">
                    <Image

                        ohos:height="50vp"
                        ohos:width="50vp"
                        ohos:scale_mode="inside"
                        ohos:layout_alignment="horizontal_center"
                        ohos:image_src="$media:chemical"/>
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text_size="18fp"
                        ohos:text_color="#8b8b7a"
                        ohos:text="化学"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:weight="1"
                    ohos:layout_alignment="horizontal_center"
                    ohos:id="$+id:biological"
                    ohos:orientation="vertical">
                    <Image

                        ohos:height="50vp"
                        ohos:width="50vp"
                        ohos:scale_mode="inside"
                        ohos:layout_alignment="horizontal_center"
                        ohos:image_src="$media:biological"/>
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text_size="18fp"
                        ohos:text_color="#8b8b7a"
                        ohos:text="生物"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:weight="1"
                    ohos:layout_alignment="horizontal_center"
                    ohos:id="$+id:geographic"
                    ohos:orientation="vertical">
                    <Image

                        ohos:height="50vp"
                        ohos:width="50vp"
                        ohos:scale_mode="inside"
                        ohos:layout_alignment="horizontal_center"
                        ohos:image_src="$media:geographic"/>
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:layout_alignment="horizontal_center"
                        ohos:text_size="18fp"
                        ohos:text_color="#8b8b7a"
                        ohos:text="地理"/>
                </DirectionalLayout>
            </DirectionalLayout>
        </DirectionalLayout>

        <ScrollView
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:background_element="#ffffff"
            ohos:top_margin="15vp"
            ohos:rebound_effect="true">
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:orientation="horizontal">
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:left_margin="70vp"
                    ohos:right_margin="100vp">
                    <Image
                        ohos:height="50vp"
                        ohos:width="match_parent"
                        ohos:image_src="$media:scollmesg1"
                        ohos:scale_mode="inside"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:right_margin="100vp">
                    <Image
                        ohos:height="50vp"
                        ohos:width="match_parent"
                        ohos:image_src="$media:scollmesg2"
                        ohos:scale_mode="inside"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:right_margin="100vp">
                    <Image
                        ohos:height="50vp"
                        ohos:width="match_parent"
                        ohos:image_src="$media:scollmesg3"
                        ohos:scale_mode="inside"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:right_margin="100vp">
                    <Image
                        ohos:height="50vp"
                        ohos:width="match_parent"
                        ohos:image_src="$media:scollmesg4"
                        ohos:scale_mode="inside"/>
                </DirectionalLayout>
            </DirectionalLayout>
        </ScrollView>

        <DirectionalLayout
            ohos:height="40vp"
            ohos:width="match_parent"
            ohos:top_margin="6vp"
            ohos:background_element="#ffffff">
            <Text
                ohos:height="35vp"
                ohos:width="match_content"
                ohos:top_margin="3vp"
                ohos:layout_alignment="horizontal_center"
                ohos:text_size="22fp"
                ohos:text="热门名师"
                ohos:text_color="black"/>
        </DirectionalLayout>

        <PageSlider
            ohos:id="$+id:page_slider"
            ohos:height="220vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:background_element="#ccc"
            />

        <RadioContainer
            ohos:id="$+id:radio_container"
            ohos:height="30vp"
            ohos:width="match_parent"
            ohos:alignment="horizontal_center"
            ohos:background_element="#ccc"
            ohos:orientation="horizontal">

            <RadioButton
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:text_size="15fp"
                />

            <RadioButton
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:text_size="15fp"
                />
            <RadioButton
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:text_size="15fp"
                />
            <RadioButton
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:text_size="15fp"
                />

        </RadioContainer>




    </DirectionalLayout>
</DirectionalLayout>