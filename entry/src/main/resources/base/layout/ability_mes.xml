<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#e8e8e8"
    ohos:orientation="vertical">
    <!--消息标题-->
    <DirectionalLayout
        ohos:height="51vp"
        ohos:width="match_parent"
        ohos:background_element="#11cd6e"
        ohos:orientation="horizontal">
        <!--返回箭头-->
        <Image
            ohos:id="$+id:mes_back_arrow"
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="0.5"
            ohos:top_margin="10vp"
            ohos:scale_mode="inside"
            ohos:left_margin="10vp"
            ohos:image_src="$media:back"/>
        <!--消息-->
        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:orientation="vertical">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:text="消息通知"
                ohos:text_size="22fp"
                ohos:text_color="#ffffff"
                ohos:top_margin="12vp"/>
        </DirectionalLayout>
    </DirectionalLayout>
    <!--预约教师信息-->
    <DirectionalLayout
        ohos:id="$+id:order_teach"
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:orientation="horizontal"
        >
        <Image
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="0.5"
            ohos:top_margin="5vp"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:bookteacher"
            ohos:left_margin="10vp"
            ohos:scale_mode="inside"/>
        <Text
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:layout_alignment="center"
            ohos:bottom_padding="15vp"
            ohos:top_margin="12vp"
            ohos:left_margin="10vp"
            ohos:text="预约老师信息"
            ohos:text_size="20fp"/>
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:right_arrow"/>
    </DirectionalLayout>
    <!--间隔线-->
    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>
    <!--我要提建议-->
    <DirectionalLayout
        ohos:id="$+id:suggest"
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:orientation="horizontal"
        >
        <Image
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="0.5"
            ohos:top_margin="5vp"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:suggest"
            ohos:left_margin="10vp"
            ohos:scale_mode="inside"/>
        <Text
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:layout_alignment="center"
            ohos:bottom_padding="15vp"
            ohos:top_margin="12vp"
            ohos:left_margin="10vp"
            ohos:text="我要评价"
            ohos:text_size="20fp"/>
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:right_arrow"/>
    </DirectionalLayout>
    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>
    <!--消息论坛-->
    <DirectionalLayout
        ohos:id="$+id:blog"
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:orientation="horizontal"
        >
        <Image
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="0.5"
            ohos:top_margin="5vp"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:blog"
            ohos:left_margin="10vp"
            ohos:scale_mode="inside"/>
        <Text
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="5"

            ohos:layout_alignment="center"
            ohos:bottom_padding="15vp"
            ohos:top_margin="12vp"
            ohos:left_margin="10vp"
            ohos:text="消息论坛"
            ohos:text_size="20fp"/>
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:right_arrow"/>
    </DirectionalLayout>
    <Image
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#cfcfcf"/>
    <!--优惠信息-->
    <DirectionalLayout
        ohos:id="$+id:discount"
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:orientation="horizontal"
        >
        <Image
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="0.5"
            ohos:top_margin="5vp"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:discount"
            ohos:left_margin="10vp"
            ohos:scale_mode="inside"/>
        <Text
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="5"

            ohos:layout_alignment="center"
            ohos:bottom_padding="15vp"
            ohos:top_margin="12vp"
            ohos:left_margin="10vp"
            ohos:text="优惠信息"
            ohos:text_size="20fp"/>
        <Image
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:right_arrow"/>
    </DirectionalLayout>

</DirectionalLayout>