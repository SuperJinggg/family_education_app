<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="35vp"
        ohos:width="match_parent"
        ohos:background_element="#107c41"
        ohos:orientation="horizontal">

        <Text
            ohos:height="33vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="起始时间"
            ohos:left_margin="10vp"
            ohos:text_color="#ffffff"
            ohos:layout_alignment="vertical_center"
            ohos:text_size="15fp"/>

        <Text
            ohos:height="33vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="结束时间"
            ohos:text_color="#ffffff"
            ohos:text_size="15fp"
            ohos:left_margin="10vp"
            ohos:layout_alignment="vertical_center"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="75vp"
        ohos:background_element="#e8e8e8"
        ohos:width="match_parent"
        ohos:orientation="horizontal">


        <Text
            ohos:id="$+id:start_time"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:text_size="20vp"
            ohos:left_margin="10vp"
            ohos:text_color="black"/>

        <Text
            ohos:id="$+id:end_time"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:layout_alignment="vertical_center"
            ohos:text_size="20fp"
            ohos:text_color="black"/>

    </DirectionalLayout>

</DirectionalLayout>