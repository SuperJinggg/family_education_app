<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <!--预约教师-->
    <DirectionalLayout
        ohos:height="51vp"
        ohos:width="match_parent"
        ohos:background_element="#11cd6e"
        ohos:orientation="horizontal">
        <!--返回箭头-->
        <Image
            ohos:id="$+id:order_teach_back_arrow"
            ohos:height="30vp"
            ohos:width="0vp"
            ohos:weight="0.5"
            ohos:left_margin="5vp"
            ohos:top_margin="10vp"
            ohos:scale_mode="inside"
            ohos:image_src="$media:back"/>
        <!--消息-->
        <DirectionalLayout
            ohos:height="50vp"
            ohos:width="0vp"
            ohos:weight="5"
            ohos:orientation="vertical">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="我预约的教师"
                ohos:text_size="20fp"
                ohos:left_margin="5vp"
                ohos:text_color="#ffffff"
                ohos:top_margin="12vp"/>
        </DirectionalLayout>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"
        ohos:orientation="horizontal">
        <Text
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="科目"

            ohos:text_color="#cfcfcf"
            ohos:text_alignment="center"
            ohos:text_size="15fp"/>

        <Text
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="教师名称"

            ohos:text_color="#cfcfcf"
            ohos:text_alignment="center"
            ohos:text_size="15fp"/>

    </DirectionalLayout>
    <ListContainer
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:id="$+id:order_teach_list"
        ohos:background_element="#ffffff">
    </ListContainer>
</DirectionalLayout>